{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "NodeNext",
    "outDir": "./dist",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}